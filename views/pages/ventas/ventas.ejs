                </label>
              </div>
              <br>
              <label class="form-check-label">Descripcion de los servicios </label>
              <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Descripcion"></textarea>
              <br>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group col">
            <label class="col-form-label">Fecha del evento</label>
            <input class="form-control" type="date">
          </div>

          <div class="form-group col">
            <label class="col-form-label">Fecha de montaje</label>
            <input class="form-control" type="date">
          </div>

        </div>

        <div class="row">
          <div class="form-group col">
            <label class="col-form-label">Fin del evento</label>
            <input class="form-control" type="date">
          </div>

          <div class="form-grup col">
            <label class="col-form-label">Fecha de la cotizacion </label>
            <input id="fecha_actual" class="form-control" type="date" disabled>
          </div>
        </div>

        <div class="row">
          <div class="form-group col">
            <label class="col-form-label">Buscar Articulo</label>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModaldeBusqueda">
              Buscar
            </button>
          </div>
        </div>


        <div class="row">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">Cantidad</th>
                <th scope="col">Producto</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Valor Unitario</th>
                <th scope="col">Valor</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="i in modelo.articulos">
                <td>{{i.cantidad}}</td>
                <td> {{i.name}} </td>
                <td> {{i.descripcion}} </td>
                <td> {{i.precio}} </td>
                <td> {{i.valor}} </td>
              </tr>

            </tbody>
          </table>
        </div>
    </form>

